<UserControl
    x:Class="HuePlay.ColourPicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    PointerMoved="PointerMoved"
    DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5" x:Name="grad">
                <LinearGradientBrush.GradientStops>
                    <GradientStop Color="Red" Offset="0"/>
                    <GradientStop Color="Orange" Offset="0.142"/>
                    <GradientStop Color="Yellow" Offset="0.285"/>
                    <GradientStop Color="LimeGreen" Offset="0.428"/>
                    <GradientStop Color="Blue" Offset="0.571"/>
                    <GradientStop Color="Indigo" Offset="0.714" />
                    <GradientStop Color="Violet" Offset="1"/>
                </LinearGradientBrush.GradientStops>
            </LinearGradientBrush>
        </Grid.Background>
    </Grid>
</UserControl>
